pkgname=chroot-linux-headers
apkgver=for-next
pkgver=${apkgver/-/+}
pkgrel=1
arch=('riscv32' 'riscv64')
source=("https://kernel.googlesource.com/pub/scm/linux/kernel/git/palmer/riscv-linux/+archive/$apkgver.tar.gz")

prepare() {
	make mrproper
}

package() {
	case $CARCH in
		riscv*)
			export XKARCH="riscv"
			;;
		*)
			echo "Architecture is not set or is not supported"
			exit 1
	esac

	make ARCH=$XKARCH INSTALL_HDR_PATH=$pkgdir/tools headers_install
}
